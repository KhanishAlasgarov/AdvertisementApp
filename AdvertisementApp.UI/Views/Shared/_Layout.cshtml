<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>One Page Wonder - Start Bootstrap Template</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    @RenderSection("css",false);
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body id="page-top">



    <nav class="navbar navbar-expand-lg @(User.Identity.IsAuthenticated && User.IsInRole("Admin")?"navbar-dark bg-danger":"navbar-dark navbar-custom")">
        <div class="container px-5">
            <a class="navbar-brand" href="#page-top">Start Bootstrap</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" asp-action="signup" asp-controller="account">Sign Up</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="signin" asp-controller="account">Log In</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link">@User.Identity.Name</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="logout" asp-controller="account">Log out</a></li>
                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-action="List" asp-route-type="@(AdvertisementAppUserStatusType.Applied)" asp-controller="Advertisement">Applications</a></li>
                            <li class="nav-item"><a class="nav-link" asp-action="List" asp-controller="Application">Job Advertisements</a></li>

                        }

                    }
                    @if (User.IsInRole("Member") || !User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" asp-action="HumanResource" asp-controller="Home">Human Resources</a></li>
                    }


                </ul>
            </div>
        </div>
    </nav>


    @RenderBody()

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("script",false)
    <script src="~/js/scripts.js"></script>
</body>
</html>

